//Array of shapes
let shapes = ["rock", "paper", "scissors"];
let computerScore = 0;
let playerScore = 0;

// Computer choose random shape from array
function computerPlay() {
  //  random number  from array
  let randomShapeNumber = Math.floor(Math.random() * shapes.length);

  //assign number to value
  let computerSelection = shapes[randomShapeNumber];
  return computerSelection;
}

//single round

function playRound(playerSelection, computerSelection) {
  if (playerSelection === computerSelection) {
    console.log(
      `Round Tie! Player score: ${playerScore} Computer score ${computerScore}`
    );
  } else if (playerSelection === "rock" && computerSelection === "paper") {
    computerScore++;
    console.log(
      `You lose round! Paper beats Rock! Player score: ${playerScore} Computer score ${computerScore}`
    );
  } else if (playerSelection === "rock" && computerSelection === "scissors") {
    playerScore++;
    console.log(
      `You win round! Scissors beats Rock! Player score: ${playerScore} Computer score ${computerScore}`
    );
  } else if (playerSelection === "paper" && computerSelection === "scissors") {
    computerScore++;
    console.log(
      `You lose round! Scissors beats Paper! Player score: ${playerScore} Computer score ${computerScore}`
    );
  } else if (playerSelection === "paper" && computerSelection === "rock") {
    playerScore++;
    console.log(
      `You win round! Paper beats Rock! Player score: ${playerScore} Computer score ${computerScore}`
    );
  } else if (playerSelection === "scissors" && computerSelection === "rock") {
    computerScore++;
    console.log(
      `You lose round! Rock beats Scissors!  Player score: ${playerScore} Computer score ${computerScore}`
    );
  } else if (playerSelection === "scissors" && computerSelection === "paper") {
    playerScore++;
    console.log(
      `You win round! Scissors beats Paper Player score: ${playerScore} Computer score ${computerScore}`
    );
  } else {
    console.log(`wrong input! round lost!`);
  }
}

function game() {
  for (let i = 0; i < 5; i++) {
    playRound(playerInput(), computerPlay());
  }
  console.log(`Game Over! Results:`);
  if (playerScore > computerScore) {
    console.log(
      `You win game! Final score: ${playerScore} Computer score ${computerScore}`
    );
  } else if (playerScore < computerScore) {
    console.log(
      `You lose game! Final score: ${playerScore} Computer score ${computerScore}`
    );
  } else {
    console.log(
      `Game Tie! Final score: ${playerScore} Computer score ${computerScore}`
    );
  }
}

//Player input

function playerInput() {
  //prompt with 'validation'
  let playerSelection = prompt("Your shape").toLowerCase();
  return playerSelection;
}

game();
